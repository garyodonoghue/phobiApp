<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gary.spiders.activity.MainMenu">

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="86dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:id="@+id/username_and_image"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="101dp"
            android:layout_height="89dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="Username"
            android:textSize="30sp"
            tools:text="USERNAME" />

        <ImageView
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/textView"
            app:srcCompat="@android:drawable/ic_menu_add" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_options"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/username_and_image">

    </RelativeLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/username_and_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="false"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="99dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/pick_game"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Choose Game"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="217dp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="My Progress"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="217dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Goals"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="294dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Find a Coach"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="374dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Chat"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="456dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Challenges"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="145dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Settings"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="145dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="About this App"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="145dp" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>