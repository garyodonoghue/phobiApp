<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gary.spiders.activity.MainMenuActivity">

    <RelativeLayout
        android:id="@+id/username_and_image"
        android:layout_width="335dp"
        android:layout_height="86dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="57dp"
            android:layout_marginStart="57dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignBottom="@+id/user_avatar"
            android:layout_toEndOf="@+id/user_avatar"
            android:layout_toRightOf="@+id/user_avatar"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:text="Username"
            android:textAlignment="center"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="0dp"
            tools:text="Username" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/username_and_image">

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="false"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_and_image"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="99dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/playGame"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:onClick="playGame"
                android:text="Initial Assessment"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="217dp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:onClick="showProgress"
                android:text="My Progress"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="217dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Goals"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="294dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Chat"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="456dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Challenges"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="145dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:onClick="settingsClicked"
                android:text="Settings"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="145dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="About this App"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="145dp" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>