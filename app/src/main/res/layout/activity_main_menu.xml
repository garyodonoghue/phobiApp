<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.gary.spiders.activity.MainMenuActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="129dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_launcher_round" />

    <TextView
        android:id="@+id/userLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:text="250" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:paddingLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:textSize="24sp"
        tools:text="Username" />

    <ScrollView
        android:id="@+id/scrollView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/playGame"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="playGame"
                android:text="Initial Assessment"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button2"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="chooseGame"
                android:text="Choose Game"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button1"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="showProgress"
                android:text="My Progress"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button6"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="settingsClicked"
                android:text="Settings"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button7"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="About this App"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>