<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gary.spiders.activity.MainMenuActivity">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView7"
        app:layout_constraintEnd_toStartOf="@+id/username"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/username"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/user_avatar"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="184dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/user_avatar"
        android:layout_toRightOf="@+id/user_avatar"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:text="Username"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/scrollView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Username" />

    <ScrollView
        android:id="@+id/scrollView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="108dp"
        android:fillViewport="false"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/playGame"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:onClick="playGame"
                android:text="Initial Assessment"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="217dp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:onClick="showProgress"
                android:text="My Progress"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="217dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Goals"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="294dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Chat"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="456dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="Challenges"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="145dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:onClick="settingsClicked"
                android:text="Settings"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="145dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:text="About this App"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="145dp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="94dp"
        android:layout_height="47dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:text="Level:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toEndOf="@+id/username"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userLevel"
        android:layout_width="78dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>