<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.gary.spiders.game.ImagePickerGame">

    <GridLayout
        android:id="@+id/tappyGrid"
        android:layout_width="wrap_content"
        android:layout_height="700dp"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_gravity="center"
        android:paddingTop="50dp">

        <ImageButton
            android:id="@+id/top_center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:onClick="tileClicked"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/center_center"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="0dip"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/bottom_center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:onClick="tileClicked"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/top_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:onClick="tileClicked"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/center_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="1"
            android:onClick="tileClicked"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/bottom_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:onClick="tileClicked"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/top_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:onClick="tileClicked"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/center_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="1"
            android:onClick="tileClicked"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/bottom_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:horizontalSpacing="0dip"
            android:onClick="tileClicked"
            android:padding="10dp"
            android:scaleType="fitCenter"/>


        <ImageButton
            android:id="@+id/bottommost_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="3"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:horizontalSpacing="0dip"
            android:onClick="tileClicked"
            android:padding="10dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/bottommost_center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="3"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:horizontalSpacing="0dip"
            android:onClick="tileClicked"
            android:padding="10dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/bottommost_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="3"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:horizontalSpacing="0dip"
            android:onClick="tileClicked"
            android:padding="10dp"
            android:scaleType="fitCenter"/>

    </GridLayout>


    <ImageButton
        android:id="@+id/giveUpVideo"
        android:layout_width="101dp"
        android:layout_height="99dp"
        android:layout_below="@+id/tappyGrid"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/safety_icon"
        android:onClick="giveUp" />


</RelativeLayout>
