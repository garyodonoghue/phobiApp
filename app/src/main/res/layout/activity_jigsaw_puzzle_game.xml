<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gary.spiders.game.JigsawPuzzleGame">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
        android:paddingLeft="40dp"
        android:paddingTop="50dp">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/jigsaw_sp094_5"
            android:onClick="tileClicked"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:cropToPadding="false"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/jigsaw_sp094_8"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:cropToPadding="false"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/jigsaw_sp094_3"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/jigsaw_sp094_4"
            android:onClick="tileClicked"/>

        <ImageButton
            android:id="@+id/imageButton5"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:cropToPadding="false"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/jigsaw_sp094_0"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"/>

        <ImageButton
            android:id="@+id/imageButton6"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:cropToPadding="false"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/jigsaw_sp094_6"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"/>

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="0"
            android:adjustViewBounds="false"
            android:background="#00000000"
            android:cropToPadding="false"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:stretchMode="columnWidth"
            app:srcCompat="@mipmap/jigsaw_sp094_7"
            android:onClick="tileClicked"/>

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_alignTop="@+id/imageButton2"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:cropToPadding="false"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/jigsaw_sp094_1"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:horizontalSpacing="0dip"
            android:verticalSpacing="0dip"
            android:stretchMode="columnWidth"
            android:onClick="tileClicked"/>

        <ImageButton
            android:id="@+id/imageButton9"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:cropToPadding="false"
            app:srcCompat="@mipmap/jigsaw_sp094_2"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:horizontalSpacing="0dip"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:onClick="tileClicked"/>
    </GridLayout>
</RelativeLayout>
