<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context="com.gary.spiders.game.JigsawPuzzleGame">

    <GridLayout
        android:id="@+id/jigsawGrid"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center"
        android:paddingTop="50dp">

        <ImageButton
            android:id="@+id/top_center"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_column="1"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/center_center"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="0dip"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="tileClicked"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/bottom_center"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_column="1"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/top_right"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/center_right"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="1"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/bottom_right"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/top_left"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/center_left"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="1"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/bottom_left"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:horizontalSpacing="0dip"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"/>

    </GridLayout>

    <ImageButton
        android:id="@+id/giveUpVideo"
        android:layout_width="101dp"
        android:layout_height="99dp"
        android:layout_above="@+id/jigsawCountdownTimer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@mipmap/safety_icon"
        android:onClick="giveUp" />

    <TextView
        android:id="@+id/jigsawCountdownTimer"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:text="Time Remaining:"
        android:textAlignment="center" />
</RelativeLayout>
