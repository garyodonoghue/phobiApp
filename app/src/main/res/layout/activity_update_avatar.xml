<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gary.spiders.activity.UpdateAvatarActivity">

    <TextView
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Choose your avatar"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/selectedAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428" />

    <GridLayout
        android:id="@+id/avatars_grid"
        android:layout_width="wrap_content"
        android:layout_height="328dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedAvatar"
        app:layout_constraintVertical_bias="0.207">

        <ImageButton
            android:id="@+id/top_center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="@drawable/avatar1"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar1" />

        <ImageButton
            android:id="@+id/center_center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:background="@drawable/avatar2"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar2" />

        <ImageButton
            android:id="@+id/bottom_center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@drawable/avatar3"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar3" />

        <ImageButton
            android:id="@+id/top_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="@drawable/avatar4"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar4" />

        <ImageButton
            android:id="@+id/center_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:background="@drawable/avatar5"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar5" />

        <ImageButton
            android:id="@+id/bottom_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@drawable/avatar6"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar6" />

        <ImageButton
            android:id="@+id/top_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="@drawable/avatar7"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar7" />

        <ImageButton
            android:id="@+id/center_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:background="@drawable/avatar8"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar8" />

        <ImageButton
            android:id="@+id/bottom_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@drawable/avatar8"
            android:cropToPadding="false"
            android:horizontalSpacing="0dip"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar9" />
    </GridLayout>

    <ImageView
        android:id="@+id/selectedAvatar"
        android:layout_width="119dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button9"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Update Avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatars_grid"
        app:layout_constraintVertical_bias="0.156"
        android:onClick="setAvatar"/>
</android.support.constraint.ConstraintLayout>
