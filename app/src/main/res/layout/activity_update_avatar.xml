<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gary.spiders.activity.UpdateAvatarActivity">

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Choose your avatar:"
        app:layout_constraintBottom_toTopOf="@+id/selectedAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/avatars_grid"
        android:layout_width="wrap_content"
        android:layout_height="328dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedAvatar"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/top_center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="@mipmap/avatar1"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar1" />

        <ImageButton
            android:id="@+id/center_center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:background="@mipmap/avatar1"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar2" />

        <ImageButton
            android:id="@+id/bottom_center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@mipmap/avatar1"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar3" />

        <ImageButton
            android:id="@+id/top_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="@mipmap/avatar1"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar4" />

        <ImageButton
            android:id="@+id/center_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:background="@mipmap/avatar1"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar5" />

        <ImageButton
            android:id="@+id/bottom_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@mipmap/avatar1"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar6" />

        <ImageButton
            android:id="@+id/top_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="@mipmap/avatar1"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar7" />

        <ImageButton
            android:id="@+id/center_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:background="@mipmap/avatar1"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="avatar8" />

        <ImageButton
            android:id="@+id/bottom_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@mipmap/ic_launcher"
            android:cropToPadding="false"
            android:horizontalSpacing="0dip"
            android:onClick="tileClicked"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tag="ic_launcher" />
    </GridLayout>

    <ImageView
        android:id="@+id/selectedAvatar"
        android:layout_width="126dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@mipmap/ic_launcher"
        tools:layout_editor_absoluteY="60dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatars_grid" />
</android.support.constraint.ConstraintLayout>
